<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:text="Welcome to ChessboardGames"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="33.0dp"
        android:id="@+id/WelcomeText"
        android:gravity="center"
        android:enabled="true" />
    <TextView
        android:text="Please LogIn get games and play online"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LogInRequestText"
        android:gravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SetIpText"
        android:text="192.168.137.64"
        android:selectAllOnFocus="true" />
    <Button
        android:text="Set Ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SetIpButton" />
    <TextView
        android:text="Login:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoginIndicatorText"
        android:enabled="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LoginText"
        android:text="filip"
        android:selectAllOnFocus="true" />
    <TextView
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordIndicatorText"
        android:enabled="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordText"
        android:text="filip"
        android:selectAllOnFocus="true" />
    <CheckBox
        android:text="Show password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordVisible" />
    <Button
        android:text="LogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LoginButton" />
    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterButton" />
</LinearLayout>